{
    "app-id": "org.gnome.meld",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "meld",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=host",
        "--metadata=X-DConf=migrate-path=/org/gnome/meld/"
    ],
    "modules": [
        {
            "name": "gtksourceview",
            "buildsystem": "meson",
            "config-opts": [
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtksourceview/4.8/gtksourceview-4.8.4.tar.xz",
                    "sha256": "7ec9d18fb283d1f84a3a3eff3b7a72b09a10c9c006597b3fbabbb5958420a87d"
                }
            ]
        },
        {
            "name": "meld",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/meld/3.23/meld-3.23.0.tar.xz",
                    "sha256": "983c2a4240e025a2109c7738198710e9d6b063c910b048332d14690cf538c2a6",
                    "x-checker-data": {
                        "is-main-source": true,
                        "type": "json",
                        "url": "https://gitlab.gnome.org/api/v4/projects/GNOME%2Fmeld/releases",
                        "version-query": ".[0].tag_name",
                        "url-query": "\"https://download.gnome.org/sources/meld/\" + ($version | sub(\"\\\\.\\\\d$\";\"\")) + \"/meld-\" + $version + \".tar.xz\""
                    }
                },
                {
                    "type": "patch",
                    "paths": [
                        "meld-appid.patch",
                        "fix-appdata.patch"
                    ]
                }
            ],
            "modules": [
                "shared-modules/intltool/intltool-0.51.json"
            ]
        },
        {
            "name": "git",
            "buildsystem": "simple",
            "build-commands": [
                "cp /usr/bin/git ${FLATPAK_DEST}/bin"
            ]
        }
    ]
}
