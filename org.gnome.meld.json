{
    "app-id": "org.gnome.meld",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "meld",
    "rename-icon": "org.gnome.Meld",
    "rename-desktop-file": "org.gnome.Meld.desktop",
    "rename-appdata-file": "org.gnome.Meld.appdata.xml",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "finish-args": [
        /* X11 + XShm */
        "--share=ipc", "--socket=fallback-x11",
        "--device=dri",
        /* Wayland */
        "--socket=wayland",
        /* Filesystem */
        "--filesystem=host",
        "--metadata=X-DConf=migrate-path=/org/gnome/meld/"
    ],
    "modules": [
         {
            "name": "gtksourceview",
            "config-opts": [
                "--enable-vala=no",
                "--enable-gtk-doc=no"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtksourceview/3.24/gtksourceview-3.24.11.tar.xz",
                    "sha256": "691b074a37b2a307f7f48edc5b8c7afa7301709be56378ccf9cc9735909077fd"
                }
            ]
        },
        {
            "name": "meld",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/meld/3.21/meld-3.21.0.tar.xz",
                    "sha256": "b680114d5ab793324549fd58f4eb202d8e280c0633a0b765ede6dfb34160a81b"
                }
            ],
            "modules": [
                "shared-modules/intltool/intltool-0.51.json"
            ]
        },
        {
            "name": "git",
            "buildsystem": "simple",
            "build-commands": [
                "cp /usr/bin/git ${FLATPAK_DEST}/bin"
            ]
        }
    ]
}
