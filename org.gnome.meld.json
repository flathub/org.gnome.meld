{
    "app-id": "org.gnome.meld",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.30",
    "sdk": "org.gnome.Sdk",
    "command": "meld",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "finish-args": [
        /* X11 + XShm */
        "--share=ipc", "--socket=x11",
        /* Wayland */
        "--socket=wayland",
        /* Filesystem */
        "--filesystem=host",
        /* dconf */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [{
            "name": "gtksourceview",
            "build-options": {
                "config-opts": [
                    "--enable-vala=no",
                    "--enable-gtk-doc=no"
                ]
            },
            "sources": [{
                "type": "archive",
                "url": "https://download.gnome.org/sources/gtksourceview/3.24/gtksourceview-3.24.9.tar.xz",
                "sha256": "699d76a453e6a3d3331906346e3dbfa25f2cbc9ec090e46635e9c6bb595e07c2"
            }]
        },
        {
            "name": "meld",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=${FLATPAK_DEST}"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://download.gnome.org/sources/meld/3.20/meld-3.20.0.tar.xz",
                "sha256": "cb40fe2f749325d7a13c35ca4928664744ced248793cd5705a630af074887086"
            }]
        }
    ]
}
