{
    "app-id": "org.gnome.meld",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "meld",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=host",
        "--metadata=X-DConf=migrate-path=/org/gnome/meld/"
    ],
    "modules": [
        {
            "name": "gtksourceview",
            "buildsystem": "meson",
            "config-opts": [
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtksourceview/4.8/gtksourceview-4.8.4.tar.xz",
                    "sha256": "7ec9d18fb283d1f84a3a3eff3b7a72b09a10c9c006597b3fbabbb5958420a87d"
                }
            ]
        },
        {
            "name": "meld",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/meld/3.22/meld-3.22.3.tar.xz",
                    "sha256": "37f7f29eb1ff0fec4d8b088d5483c556de1089f6d018fe6d481993caf2499d84",
                    "x-checker-data": {
                        "is-main-source": true,
                        "type": "gnome",
                        "name": "meld",
                        "stable-only": true,
                        "version-scheme": "odd-minor-is-unstable"
                    }
                },
                {
                    "type": "patch",
                    "paths": [
                        "meld-appid.patch",
                        "fix-appdata.patch"
                    ]
                }
            ],
            "modules": [
                "shared-modules/intltool/intltool-0.51.json"
            ]
        },
        {
            "name": "git",
            "buildsystem": "simple",
            "build-commands": [
                "cp /usr/bin/git ${FLATPAK_DEST}/bin"
            ]
        }
    ]
}
